{
  "name": "snapshot-testing",
  "description": "Some of the react code is based on a project by Francesco Agnoletto: https://github.com/Kornil/simple-redux-app#readme"
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint ./src",
    "precommit": "LIST=`git diff-index --no-commit-id --name-only origin | grep .js | grep -v .json`; if [ -n \"$LIST\" ]; then eslint $LIST --fix; sleep 1; fi",
    "test": "react-scripts test --env=jsdom",
    "test-without-watch": "CI=true react-scripts test",
    "test-without-dom": "react-scripts test",
    "update-snapshots": "react-scripts test --env=jsdom --updateSnapshot",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "open-cov-doc": "open coverage/lcov-report/index.html",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "babel-jest": "^22.4.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "redux-logger": "^3.0.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 95,
        "statements": 90,
        "functions": 95,
        "branches": 90
      },
      "./src/components/": {
        "branches": 95,
        "statements": 95
      },
      "./src/components/**/*.jsx": {
        "statements": 50
      }
    }
  }
}
